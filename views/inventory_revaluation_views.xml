<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_inventory_revaluation_tree" model="ir.ui.view">
        <field name="name">inventory.revaluation.tree</field>
        <field name="model">inventory.revaluation</field>
        <field name="arch" type="xml">
            <list string="Revalorizaciones de Inventario">
                <field name="name" string="Referencia"/>
                <field name="date" string="Fecha de Revalorización"/>
                <field name="state" string="Estado"/>
                <field name="total_value_change" string="Valor Total de Revalorización"/>
                <field name="account_move_id" string="Movimiento Contable"/>
            </list>
        </field>
    </record>

    <record id="view_inventory_revaluation_form" model="ir.ui.view">
        <field name="name">inventory.revaluation.form</field>
        <field name="model">inventory.revaluation</field>
        <field name="arch" type="xml">
            <form string="Revalorización de Inventario">
                <header>
                    <button name="action_post"
                            type="object"
                            string="Confirmar"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_cancel"
                            type="object"
                            string="Cancelar"
                            class="btn-secondary"
                            invisible="state == 'cancel'"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancel"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" string="Referencia"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="date" string="Fecha" readonly="state != 'draft'"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="journal_id" string="Diario Contable" readonly="1"/>
                            <field name="account_move_id" string="Asiento de Diario" readonly="1"/>
                            <field name="total_value_change" string="Valor Total de Revalorización" readonly="1"/>
                        </group>
                    </group>

                    <notebook>

                        <page string="Lineas (Borrador)" invisible="state != 'draft'">
                            <field name="line_ids"
                                   context="{'default_company_id': company_id}"
                                   readonly="0">
                                <list editable="bottom" create="1" edit="1" delete="1">
                                    <field name="product_id" string="Producto" required="1"/>
                                    <field name="counterpart_account_id" string="Cuenta Contable" required="1"/>
                                    <field name="qty_on_hand" string="Cantidad" readonly="1"/>
                                    <field name="current_cost" string="Costo Actual" readonly="1"/>
                                    <field name="new_cost" string="Nuevo Costo" required="1"/>
                                    <field name="value_change" string="Cambio de Revalorización" readonly="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Lineas (Confirmado)" invisible="state == 'draft'">
                            <field name="line_ids" readonly="1">
                                <list create="0" edit="0" delete="0">
                                    <field name="product_id" string="Producto" readonly="1"/>
                                    <field name="counterpart_account_id" string="Cuenta Contable" readonly="1"/>
                                    <field name="qty_snapshot" string="Cantidad Previa" readonly="1"/>
                                    <field name="current_cost_snapshot" string="Costo Previo" readonly="1"/>
                                    <field name="new_cost_snapshot" string="Costo Asignado" readonly="1"/>
                                    <field name="value_change_snapshot" string="Cambio de Revalorización" readonly="1"/>
                                </list>
                            </field>
                        </page>

                    </notebook>

                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_inventory_revaluation" model="ir.actions.act_window">
        <field name="name">Revalorizaciones de Inventario</field>
        <field name="res_model">inventory.revaluation</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_inventory_revaluation_tree"/>
        <field name="context">{}</field>
    </record>

</odoo>